---
import "../styles/global.css";
import { Toaster } from "@/components/ui/sonner";
import { Topbar } from "@/components/navigation/Topbar";

interface Props {
  title?: string;
  hideTopbar?: boolean;
}

const { title = "10x Astro Starter", hideTopbar = false } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    {!hideTopbar && <Topbar client:load currentPath={currentPath} />}
    <slot />
    <Toaster client:load />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
