---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Rejestracja" hideTopbar={true}>
  <main class="min-h-screen flex items-center justify-center p-4">
    <div class="w-full max-w-md rounded-lg border bg-white dark:bg-neutral-950 p-6 md:p-8 shadow-sm">
      <header class="mb-4">
        <h1 class="text-2xl font-semibold tracking-tight">Rejestracja</h1>
        <p class="mt-1 text-sm text-neutral-500 dark:text-neutral-400">Strona w przygotowaniu.</p>
      </header>
      <p class="text-sm text-neutral-600 dark:text-neutral-300">
        Wróć do <a class="text-primary hover:underline" href="/login">logowania</a>.
      </p>
    </div>
  </main>
</Layout>


